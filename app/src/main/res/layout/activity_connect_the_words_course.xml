<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".ConnectTheWordsCourse"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">


    <!-- Left side with EditText fields -->
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/word1"
            android:layout_width="match_parent"
            android:layout_height="131dp"
            android:background="@drawable/selector_frame"
            android:clickable="true"
            android:focusable="true"
            android:gravity="center"
            android:text="דם" />

        <TextView
            android:id="@+id/word2"
            android:layout_width="match_parent"
            android:layout_height="141dp"
            android:background="@drawable/selector_frame"
            android:clickable="true"
            android:focusable="true"
            android:gravity="center"
            android:text="אוויר" />

        <TextView
            android:id="@+id/word3"
            android:layout_width="match_parent"
            android:layout_height="118dp"
            android:background="@drawable/selector_frame"
            android:clickable="true"
            android:focusable="true"
            android:gravity="center"
            android:text="כאב" />

        <TextView
            android:id="@+id/word4"
            android:layout_width="match_parent"
            android:layout_height="140dp"
            android:background="@drawable/selector_frame"
            android:clickable="true"
            android:focusable="true"
            android:gravity="center"
            android:text="קיא" />

    </LinearLayout>

    <!-- Right side with videos -->
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/video1"
            android:layout_width="wrap_content"
            android:layout_height="130dp"
            android:background="@drawable/selector_frame"
            android:clickable="true"
            android:contentDescription="Video"
            android:focusable="true"
            android:src="@raw/blood" />

        <ImageView
            android:id="@+id/video2"
            android:layout_width="wrap_content"
            android:layout_height="139dp"
            android:background="@drawable/selector_frame"
            android:clickable="true"
            android:contentDescription="Video"
            android:focusable="true"
            android:src="@raw/air" />

        <ImageView
            android:id="@+id/video3"
            android:layout_width="wrap_content"
            android:layout_height="121dp"
            android:background="@drawable/selector_frame"
            android:clickable="true"
            android:contentDescription="Video"
            android:focusable="true"
            android:src="@raw/pain" />

        <ImageView
            android:id="@+id/video4"
            android:layout_width="wrap_content"
            android:layout_height="144dp"
            android:background="@drawable/selector_frame"
            android:clickable="true"
            android:contentDescription="Video"
            android:focusable="true"
            android:src="@raw/vomit" />


        <!-- Add more VideoView elements as needed -->

    </LinearLayout>



</LinearLayout>
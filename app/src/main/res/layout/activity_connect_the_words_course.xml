<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".ConnectTheWordsCourse"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">


    <!-- Left side with EditText fields -->
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/word1"
            android:layout_width="match_parent"
            android:layout_height="112dp"
            android:text="בבקשה"
            android:background="@drawable/selector_frame"
            android:clickable="true"
            android:focusable="true"/>

        <TextView
            android:id="@+id/word2"
            android:layout_width="match_parent"
            android:layout_height="127dp"
            android:text="נחמד, נהנה"
            android:background="@drawable/selector_frame"
            android:clickable="true"
            android:focusable="true"/>

        <TextView
            android:id="@+id/word3"
            android:layout_width="match_parent"
            android:layout_height="123dp"
            android:text="חופש"
            android:background="@drawable/selector_frame"
            android:clickable="true"
            android:focusable="true"/>

        <TextView
            android:id="@+id/word4"
            android:layout_width="match_parent"
            android:layout_height="109dp"
            android:text="סליחה"
            android:background="@drawable/selector_frame"
            android:clickable="true"
            android:focusable="true"/>

    </LinearLayout>

    <!-- Right side with videos -->
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/video1"
            android:layout_width="wrap_content"
            android:layout_height="137dp"
            android:src="@raw/please"
            android:background="@drawable/selector_frame"
            android:clickable="true"
            android:focusable="true"
            android:contentDescription="Video"/>

        <ImageView
            android:id="@+id/video2"
            android:layout_width="wrap_content"
            android:layout_height="144dp"
            android:src="@raw/nice"
            android:background="@drawable/selector_frame"
            android:clickable="true"
            android:focusable="true"
            android:contentDescription="Video"/>

        <ImageView
            android:id="@+id/video3"
            android:layout_width="wrap_content"
            android:layout_height="126dp"
            android:src="@raw/va"
            android:background="@drawable/selector_frame"
            android:clickable="true"
            android:focusable="true"
            android:contentDescription="Video"/>

        <ImageView
            android:id="@+id/video4"
            android:layout_width="wrap_content"
            android:layout_height="114dp"
            android:src="@raw/sorry"
            android:background="@drawable/selector_frame"
            android:clickable="true"
            android:focusable="true"
            android:contentDescription="Video"/>


        <!-- Add more VideoView elements as needed -->

    </LinearLayout>



</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".WriteTheSentenceInHebrew"
    android:orientation="vertical"
    android:gravity="center">

    <ImageButton
        android:id="@+id/backbutton"
        android:layout_width="48dp"
        android:layout_height="wrap_content"
        android:contentDescription="Go To HebrewLevels"
        app:srcCompat="@drawable/backbutton" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="תרגם / תרגמי את המילה המופיעה בשפת הסימנים לעברית" />

    <ImageView
        android:id="@+id/whatsyournameGif"
        android:layout_width="wrap_content"
        android:layout_height="335dp"
        android:src="@raw/hello"/>

    <EditText
        android:id="@+id/answerUser"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:minHeight="48dp"
        android:inputType="text"
        android:hint="כתוב/ כתבי את המילה בעברית ."/>

    <Button
        android:id="@+id/submitAnswerButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="הגש"
        android:background="@drawable/buttondesign1"/>


</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ChooseTheRightWord"
    android:orientation="vertical"
    android:background="@drawable/arabichomepagebg">


    <ImageButton
        android:id="@+id/backbutton"
        android:layout_width="48dp"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/backbutton"
        android:contentDescription="Go To HebrewLevels"/>

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="104dp"
        android:text="בחר/ בחרי את הפירוש הנכון של המילה המופיע"
        android:textAlignment="center"
        android:textSize="20dp" />


    <ImageView
        android:id="@+id/schoolgif"
        android:layout_width="match_parent"
        android:layout_height="245dp"
        android:src="@raw/headache" />

    <ImageButton
        android:id="@+id/option1"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_weight="1"
        android:background="@drawable/option1"
        android:minHeight="100dp"
        android:text="יש לי כאב בטן"
        tools:ignore="SpeakableTextPresentCheck" />

    <ImageButton
        android:id="@+id/option2"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_weight="1"
        android:background="@drawable/option2"
        android:minHeight="100dp"
        android:text="כואב לי היד"
        tools:ignore="SpeakableTextPresentCheck" />

    <ImageButton
        android:id="@+id/option3"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_weight="1"
        android:background="@drawable/option3"
        android:minHeight="100dp"
        android:text="כואב לי הרגל"
        tools:ignore="SpeakableTextPresentCheck" />

    <ImageButton
        android:id="@+id/option4"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_weight="1"
        android:background="@drawable/option4"
        android:minHeight="100dp"
        android:text="יש לי כאב ראש"
        tools:ignore="SpeakableTextPresentCheck" />



</LinearLayout>